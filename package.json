{
	"name": "hrnet-datepicker",
	"version": "1.0.0",
	"description": "A modern, accessible, and customizable React DatePicker component for HRnet and any React project.",
	"author": "Floriano Gomez",
	"license": "MIT",
	"keywords": [
		"react",
		"datepicker",
		"calendar",
		"date",
		"picker",
		"hrnet",
		"typescript",
		"accessible"
	],
	"homepage": "https://github.com/florianogomez/hrnet-datepicker#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/florianogomez/hrnet-datepicker.git"
	},
	"bugs": {
		"url": "https://github.com/florianogomez/hrnet-datepicker/issues"
	},
	"files": [
		"dist/",
		"README.md"
	],
	"type": "module",
	"main": "dist/hrnet-datepicker.umd.js",
	"module": "dist/hrnet-datepicker.es.js",
	"exports": {
		".": {
			"import": "./dist/hrnet-datepicker.es.js",
			"require": "./dist/hrnet-datepicker.umd.js"
		}
	},
	"types": "dist/lib/index.d.ts",
	"style": "dist/hrnet-datepicker.css",
	"sideEffects": [
		"dist/hrnet-datepicker.css"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc -p tsconfig.build.json && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"test": "vitest",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"react": ">=18.0.0 <21.0.0",
		"react-dom": ">=18.0.0 <21.0.0"
	},
	"dependencies": {
		"consola": "^3.4.2",
		"date-fns": "^4.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@types/date-fns": "^2.6.3",
		"@types/node": "^24.0.11",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@vitejs/plugin-react": "^4.6.0",
		"eslint": "^9.30.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"path": "^0.12.7",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"sass-embedded": "^1.89.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "^7.0.3",
		"vitest": "^2.0.0"
	}
}
